{% block content %}
    <h1>Square equations</h1>
    <p>
        <i>a = <i> <b>{{ a }}</b>
    </p>
    <p>
        <b>S =  a<sup>2</sup> = a * a = <i> <b>{{ S }}</b>
    </p>
    <p>
        <b>P = 4 * a = <i> <b>{{ P }}</b>
    </p>
    <p>
        <b>V = a<sup>3</sup> = a * a * a = <i> <b>{{ V }}</b>
    </p>
{% endblock %}